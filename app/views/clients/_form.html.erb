

<%= form_for @client do |f| %>
    <%= f.text_field :name, class: 'form-control', placeholder: "Name"  %><br />
    <%= f.email_field :email, class: 'form-control', placeholder: "Email"  %><br />
    <%= f.number_field :phone_number, class: 'form-control', placeholder: "Phone Number"  %><br />
    <%= f.text_field :address, class: 'form-control', placeholder: "Address"  %><br />
    <%= f.submit class: 'btn-primary' %>
<% end %>
